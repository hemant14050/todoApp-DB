<style>
    nav {
        background-color: #333;
        overflow: hidden;
    }

    nav a , .user-greet {
        float: left;
        color: white;
        text-align: center;
        padding: 14px 16px;
        text-decoration: none;
        font-size: 17px;
    }

    .user-greet {
        color: rgb(120, 230, 120);
    }

    nav a:hover {
        background-color: #ddd;
        color: black;
    }

    .right {
        float: right;
    }
</style>

<nav>
    <a href="/">Home</a>
    <a href="">About</a>
    <a href="">Contact</a>
    <div class="right">
        <% if (data) { %>
            <span class="user-greet">Welcome <%= data.userName %>!</span>
        <% } %>
        <a href="/logout" class="logout">Logout</a>
    </div>
</nav>